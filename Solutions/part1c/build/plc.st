FUNCTION_BLOCK python_gear
  VAR_INPUT
    N : UINT;
    TRIG : BOOL;
    CODE : STRING;
  END_VAR
  VAR_OUTPUT
    ACK : BOOL;
    RESULT : STRING;
  END_VAR
  VAR
    py_eval : python_eval;
    COUNTER : UINT;
    ADD10_OUT : UINT;
    EQ13_OUT : BOOL;
    SEL15_OUT : UINT;
    AND7_OUT : BOOL;
  END_VAR

  ADD10_OUT := ADD(COUNTER, 1);
  EQ13_OUT := EQ(N, ADD10_OUT);
  SEL15_OUT := SEL(EQ13_OUT, ADD10_OUT, 0);
  COUNTER := SEL15_OUT;
  AND7_OUT := AND(EQ13_OUT, TRIG);
  py_eval(TRIG := AND7_OUT, CODE := CODE);
  ACK := py_eval.ACK;
  RESULT := py_eval.RESULT;
END_FUNCTION_BLOCK


PROGRAM part1c
  VAR
    Input0 : BOOL;
    Output0 : BOOL;
  END_VAR
  VAR
    Oscillator : BOOL;
    TON0 : TON;
    TOF0 : TOF;
    CTU0 : CTU;
    Bomb : BOOL;
    Countup : INT := 5;
    TrueBool : BOOL := 1;
    TON1 : TON;
    R_TRIG1 : R_TRIG;
  END_VAR

  TON0(IN := NOT(Oscillator) AND Input0, PT := T#6000ms);
  TOF0(IN := TON0.Q, PT := T#6000ms);
  Oscillator := TOF0.Q;
  Output0 := NOT(Oscillator) AND Input0 OR Bomb;
  R_TRIG1(CLK := Output0);
  CTU0(CU := R_TRIG1.Q, PV := Countup);
  TON1(IN := Input0, PT := T#30000ms);
  Bomb := Bomb OR CTU0.Q OR TON1.Q;
END_PROGRAM


